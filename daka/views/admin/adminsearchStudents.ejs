                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">请输入学生姓名：</button>
                    </span>
                    <input type="text" id="search" name="search" class="form-control" placeholder="查询学生基本信息">
                    
                </div><!-- /input-group -->
                <div> <button type="button" onclick="searchds()" class="btn btn-primary" style="margin-left: 100%; width: 30%;margin-top: -15%" id="codess" >查询</button>
                	<p id="s-t" style="padding-left: 136px; color: red;display: none;" >查询中请稍等</p>
                </div>
