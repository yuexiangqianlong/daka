 <script type="text/javascript">
 	var searchs=null;
     function searchds(){
    searchs = $("#search").val();
    if (searchs) {
    	$("#s-t").show()
    	  $('#codess').attr("disabled","disabled");
          $('#codess').text('1分钟后点击查询');
         
          setTimeout(shows, 60000);
          function shows(){
            $('#codess').removeAttr("disabled","disabled");
            $('#codess').text('查询');
          }
    	$.get('/suggest/'+searchs,function(rs){
        $("#main").html(rs)
    })
    }else{
    	alert("请输入学生姓名")
    }
    
      }
   </script>
  </head>
