<html>
  <head>
    <title>日报系统索维智能学院</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">  
   <script src="/javascripts/jquery-2.1.4.min.js"></script>
   <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   <meta name="viewport" content="width=500, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5, user-scalable=no" />
   <meta name="apple-mobile-web-app-capable" content="yes" />
   <style>
        .headStyle{
             height: 0.5em;
             margin-top:6px;
        }
   </style>
   <script type="text/javascript">
     function subInfo(){
         var pre=document.loginForm.classes.value;
         var reg=/^[\u4E00-\u9FA5][\u4E00-\u9FA50-9a-zA-Z]{1,39}$/;
         var pwd=document.loginForm.pwd.value;
         var ped=/^.{6,20}$/;
            if(loginForm.name.value==''){
              alert('名称不允许空');
              loginForm.name.focus();
              return false;
            }
            if(loginForm.classes.value==''){
              alert('班级不允许空');
              loginForm.classes.focus();
              return false;
            }else if (!reg.test(pre)){
                  alert("请填写如：全栈108班");
                  return false;
            }
            if(loginForm.pwd.value==''){
              alert('密码不允许空');
              loginForm.pwd.focus();
              return false;
            }else if (!ped.test(pwd)){
                  alert("请填写6-18位密码");
                  return false;
            }
          }
   </script>
  </head>
  <body style="background-color: #F7F7F7">
        <div class="row" >
          <div class="col-sm-12 headStyle">
           <form class="bs-example bs-example-form" id="loginForm" role="loginForm" name='loginForm' action='/login' method="post" onsubmit="return subInfo();">
                 <img src="../../images/sowayai.jpg" style="height: 200;margin:0 auto;display:block">
                <div style="padding: 50px 30% 10px;">
			        <div class="row">
			            <div class="col-lg-12 col-sm-12">
			                <div class="input-group">
			                    <span class="input-group-btn">
			                        <button class="btn btn-default" type="button">姓名:</button>
			                    </span>
			                    <input type="text" id="name" name="name" class="form-control" placeholder="请输入真实姓名">
			                </div><!-- /input-group -->
			                <div class="form-group" style="margin-top: 30">
                            <select class="form-control" name="classes">
                              <option value='游戏'>游戏</option>
                              <option value="全栈11班">全栈11班</option>
                              <option value="全栈10班">全栈10班</option>
                              <option value="全栈9班">全栈9班</option>
                              </select>
                      </div><!-- /input-group -->
			                <div class="input-group" style="margin-top: 30">
			                    <span class="input-group-btn">
			                        <button class="btn btn-default" type="button">密码:</button>
			                    </span>
			                    <input type="password" id="pwd" name="pwd" class="form-control" placeholder="请输入你的6-18位密码">
                          <input type="hidden" id="frequency" name="frequency" class="form-control" value="1">
			                </div><!-- /input-group -->
                        <button type="submit" class="btn btn-primary btn-lg" style="margin:10% auto;display:block; width: 50%;" >登陆</button>
                      <a href="/userRegister"> <button type="button" class="btn btn-link" style="margin-top: -15%;margin-left: 80%">新用户?</button></a>
			            </div><!-- /.col-lg-4 -->
			        </div>
			    </div>      
          </form>
      </div>
  </div>
</body>
</html>