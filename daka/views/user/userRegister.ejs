<html>
  <head>
    <title>日报系统索维智能学院</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">  
   <script src="/javascripts/jquery-2.1.4.min.js"></script>
   <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   <meta name="viewport" content="width=500, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5, user-scalable=no" />
   <meta name="apple-mobile-web-app-capable" content="yes" />
   <style>
        .headStyle{
             height: 0.5em;
             margin-top:6px;
        }
   </style>
   <script type="text/javascript">
     function subInfo(){
     	   var pre=document.registerForm.classes.value;
     	   // var reg=/^[\u5168-\u6808]{1,999}[\u73ed]$/;
     	   var pwd=document.registerForm.pwd.value;
     	   var repwd=document.registerForm.repwd.value;
           var ped=/^\w{5,18}$/;
            if(registerForm.name.value==''){
              alert('名称不允许空');
              registerForm.name.focus();  
              return false;
            }
    //         if(registerForm.classes.value==''){
    //           alert('班级不允许空');
    //           registerForm.classes.focus();
    //           return false;
    //         }else if (!reg.test(pre)){
				// alert("请填写如：全栈108班");
				// return false;
    //         }

            if(registerForm.pwd.value==''){
              alert('密码不允许空');
              registerForm.pwd.focus();
              return false;
            }else if (!ped.test(pwd)){
                  alert("请填写6-18位密码");
                  return false;
            }
             if(registerForm.repwd.value==''){
              alert('确认密码不允许空');
              registerForm.repwd.focus();
              return false;
            }else if (!ped.test(repwd)){
                  alert("请填写6-18位确认密码");
                  return false;
            }else if (registerForm.pwd.value!=registerForm.repwd.value) {
              alert('密码不一致请重新输入');
              registerForm.pwd.focus();
              registerForm.repwd.focus();
              return false;
            }
          };
      function codes(){
        $.post('./code',{phone:registerForm.phone.value},function(re){}) 
          $('#codess').attr("disabled","disabled");
          $('#codess').text('10分钟后重试');
         
          setTimeout(shows, 1000000);
          function shows(){
            $('#codess').removeAttr("disabled","disabled");
            $('#codess').text('获取验证码');
          }
     };
        
   </script>
  </head>
  <body style="background-color: #F7F7F7">
        <div class="row" >
          <div class="col-sm-1"></div>
          <div class="col-sm-10 headStyle">
                <form class="bs-example bs-example-form" role="form" name='registerForm' action='/Register' method="post" onsubmit="return subInfo();">
                <img src="../../images/sowayai.jpg" style="height: 200;margin:0 auto;display:block">
                <div style="padding: 50px 30% 10px;">
			        <div class="row">
			            <div class="col-lg-12">
			                <div class="input-group">
			                    <span class="input-group-btn">
			                        <button class="btn btn-default" type="button">姓名:</button>
			                    </span>
			                    <input type="text" id="name" name="name" class="form-control" placeholder="请输入真实姓名">
			                </div><!-- /input-group -->
			                   <div class="form-group" style="margin-top: 30">
                            <select class="form-control" name="classes">
                              <option value='游戏'>游戏</option>
                              <option value="全栈11班">全栈11班</option>
                              <option value="全栈10班">全栈10班</option>
                              <option value="全栈9班">全栈9班</option>
                              </select>
                      </div><!-- /input-group -->	
                      <div class="input-group" style="margin-top: 30">
			                    <span class="input-group-btn">
			                        <button class="btn btn-default" type="button">密码:</button>
			                    </span>
			                    <input type="password" id="pwd"  name="pwd" class="form-control" placeholder="请输入你的6-18位密码">
			                </div><!-- /input-group -->
			                <div class="input-group" style="margin-top: 30">
			                    <span class="input-group-btn">
			                        <button class="btn btn-default" type="button">确认密码:</button>
			                    </span>
			                    <input type="password" id="repwd" class="form-control" placeholder="请再次输入密码">
			                    <input type="hidden" id="frequency" name="frequency" class="form-control" value="1">
			                </div><!-- /input-group -->
                      <div class="input-group" style="margin-top: 30">
                          <span class="input-group-btn">
                          <button class="btn btn-default" type="button">手机号:</button>
                          </span>
                          <input type="text" id="phone" name='phone' class="form-control" value="" placeholder="请输入手机号">
                      </div><!-- /input-group -->
                      <div class="input-group" style="margin-top: 30">
                       <span class="input-group-btn">
                          <button class="btn btn-default" type="button">请输入验证码:</button>
                          </span>
                        <input type="text" id="code" name="code" class="form-control" style="width: 50%;margin-top: 1%"; placeholder="请输入验证码">      
                        <button type="button" class="btn btn-success " onclick='codes()' style="margin-left: 55%;margin-top: -9%" id="codess">获取验证码</button>
                      </div>
			                <button type="submit" class="btn btn-primary btn-lg" style="margin-top: 30;margin-left: 10%; width: 50%;">注册</button>
			                <a href="/"> <button type="button" class="btn btn-link" style="margin-top:-10%;margin-left: 80%">老学员</button></a>
			            </div><!-- /.col-lg-4 -->
			       
			        </div>
			    </div>       
                </form>
            </div>
           <div class="col-sm-1">
           	 
           </div>
        </div>
